server {
    server_name jesse-test.zng.dk www.jesse-test.zng.dk;

    location ^~ /admin {
        root /var/www/team-task-management-system/frontend/build;
        try_files $uri $uri/ /index.html;
    }

    location / {
        root /var/www/team-task-management-system/frontend/build;
        index index.html index.htm;
        try_files $uri $uri/ /index.html;
    }

    location /api/ {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /django-admin/ {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /django_static/ {
        alias /var/www/team-task-management-system/backend/staticfiles/;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }

    location /media/ {
        alias /var/www/team-task-management-system/backend/media/;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }

    listen 443 ssl; 
    ssl_certificate /etc/letsencrypt/live/jesse-test.zng.dk/fullchain.pem; 
    ssl_certificate_key /etc/letsencrypt/live/jesse-test.zng.dk/privkey.pem; 
    include /etc/letsencrypt/options-ssl-nginx.conf; 
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; 
}

server {
    if ($host = jesse-test.zng.dk) {
        return 301 https://$host$request_uri;
    } 
    listen 80;
    server_name jesse-test.zng.dk www.jesse-test.zng.dk;
    return 404; 
}
